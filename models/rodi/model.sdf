<?xml version='1.0'?>
<sdf version='1.4'>
  <model name="rodi">
    <static>false</static>
    <link name='base_link'>
      <pose>0 0 0 0 0 0</pose>

      <collision name='base_link_collision'>
        <pose frame=''>0 0 0.0045 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.08 .048</size>
          </box>
        </geometry>
      </collision>

      <visual name='base_link_visual'>
        <pose>0.3 -0.93 -0.0195 0 0 1.57079632679</pose>
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>model://rodi/meshes/rodi_base.stl</uri>
          </mesh>
        </geometry>
      </visual>

      <sensor name="sonar" type="sonar">
        <pose>0.04 0 0 0 -1.7 0</pose>
        <sonar>
          <min>0.2</min>
          <max>1.0</max>
          <!-- FIXME: this is an estimated value -->
          <radius>0.5</radius>
        </sonar>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>false</visualize>
      </sensor>
    </link>

    <joint type="fixed" name="ball_caster_joint">
      <parent>base_link</parent>
      <child>ball_caster_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <link name="ball_caster_link">
      <collision name='ball_caster_collision'>
        <pose>0.038 0 -0.02 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>.0047625</radius>
          </sphere>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
              <slip1>1.0</slip1>
              <slip2>1.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <link name="left_wheel">
      <pose>-0.035 0.045 -0.01 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.02</radius>
            <length>.003</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>.02</radius>
            <length>.003</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <link name="right_wheel">
      <pose>-0.035 -0.045 -0.01 0 1.5707 1.5707</pose>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>.02</radius>
            <length>.003</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>.02</radius>
            <length>.003</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint type="revolute" name="left_wheel_servo">
      <parent>base_link</parent>
      <child>left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <joint type="revolute" name="right_wheel_servo">
      <parent>base_link</parent>
      <child>right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <plugin name="model_rodi" filename="libmodel_rodi.so">
      <port>9999</port>
    </plugin>

  </model>
</sdf>
